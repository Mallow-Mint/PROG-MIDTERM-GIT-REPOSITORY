import pygame
image_proper = pygame.image.load('Game Testing/Assets/Wizard Pack/Fall.png')

# Initialize Pygame
pygame.init()

# Set up display
SCREEN = pygame.display.set_mode((800, 600))
pygame.display.set_caption("Spell Book")

# Define colors
BLACK = (0, 0, 0)
WHITE = (255, 255, 255)
GRAY = (200, 200, 200)

run = True
while run:
        SCREEN.fill(BLACK)
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                run = False
            else:
                SCREEN.blit(image_proper,(0,0))
            pygame.display.update()



pygame.quit()
